{
	"name": "expense-app-backend",
	"version": "1.0.0",
	"description": "Expense management app backend with Node.js, Express, TypeScript, and PostgreSQL",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"engines": {
		"node": ">=22"
	},
	"keywords": [
		"nodejs",
		"express",
		"typescript",
		"postgresql",
		"expense-management"
	],
	"author": "minhaj",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^17.3.1",
		"drizzle-kit": "^0.31.9",
		"drizzle-orm": "^0.45.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.11.3",
		"pino": "^8.16.2",
		"pino-http": "^8.5.0",
		"postgres": "^3.4.8",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.8",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.10.3",
		"@types/pg": "^8.10.9",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^29.7.0",
		"prettier": "^3.1.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.0",
		"typescript": "^5.3.2"
	}
}
